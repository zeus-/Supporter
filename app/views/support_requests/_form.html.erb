<%= form_for @request do |f| %>
  <div class="form-field"> 
    <%= f.label :name %> 
    <%= f.text_field :name, class: 'form-control' %> 
  </div>
  <div class="form-field"> 
    <%= f.label :email %> 
    <%= f.email_field :email, class: 'form-control' %> 
  </div> 
  <div class="form-field"> 
    <%= f.label :department %> 
    <br>
    <% SupportRequest::DEPARTMENT.each do |d| %>
    <%= f.radio_button :department, d %> 
    <%= @request.department = d %>
    <br>
    <% end %>
  </div>
  <div class="form-field"> 
    <%= f.label :message %> 
    <%= f.text_area :message, class: 'form-control' %> 
  </div>  
  <%= f.submit (@request.persisted? ? "Update" : "Save"), class: "btn btn-primary" %>
  <% end %>